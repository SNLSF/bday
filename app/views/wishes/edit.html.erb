<h1>Edit wish</h1>

<%= form_with(model: @wish, local: true) do |form| %>

  <% if @wish.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@wish.errors.count, "error") %> prohibited
        this wish from being saved:
      </h2>
      <ul>
        <% @wish.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>

  <p>
    <%= form.label :text %><br>
    <%= form.text_area :text %>
  </p>

  <p>
    <%= form.submit %>
  </p>
  <p>
    <%= link_to 'Destroy', wish_path(@wish),
      method: :delete,
      data: { confirm: 'Are you sure?' } %>
  </p>

<% end %>

<%= link_to 'Back', wishes_path %>
